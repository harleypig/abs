_pkgname=taskd
pkgname=$_pkgname-git
pkgver=1.1.0
pkgrel=1
pkgdesc="A lightweight, secure server providing multi-user, multi-client access to task data"

arch=('i686' 'x86_64')
depends=('gnutls')
license=('MIT')
makedepends=('git' 'cmake')
provides=('taskd')
url='http://tasktools.org/projects/taskd.html'

source=('git+https://git.tasktools.org/scm/tm/taskd.git'
        'taskd.conf'
        'taskd.service')
md5sums=('SKIP'
         'c677dde7fcd08d6f9c40434eb1c00e84'
         'e853d77d19f8b57b665b5d8dc99d87b4')

